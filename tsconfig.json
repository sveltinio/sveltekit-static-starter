{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"outDir": "./build",
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$config": ["config"],
			"$config/*": ["config/*"],
			"$content": ["content"],
			"$content/*": ["content/*"],
			"$themes": ["themes"],
			"$themes/*": ["themes/*"]
		}
	},
	"include": [
		"src/**/*.d.ts",
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte",
		"themes/**/*.d.ts",
		"themes/**/*.js",
		"themes/**/*.ts",
		"themes/**/*.svelte"
	]
}
